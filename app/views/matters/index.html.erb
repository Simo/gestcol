<% title "Matters" %>

<table>
  <tr>
    <th>Nome Materia</th>
    <th>Compresenza</th>
    <th>Giardino</th>
    <th>Altri Costi</th>
  </tr>
  <% for matter in @matters %>
    <tr>
      <td><%= matter.nome_materia %></td>
      <td><%= matter.compresenza %></td>
      <td><%= matter.giardino %></td>
      <td><%= matter.altri_costi %></td>
      <td><%= link_to "Show", matter %></td>
      <td><%= link_to "Edit", edit_matter_path(matter) %></td>
      <td><%= link_to "Destroy", matter, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Matter", new_matter_path %></p>
