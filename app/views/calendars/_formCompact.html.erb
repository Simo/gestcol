<%= form_for @calendar do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :Classe %><br />
    <%= f.collection_select :grade_id, @grades, :id, :descr_classe %>
  </p>
  <p>
    <%= f.label :Materia %><br />
    <%= f.collection_select :matter_id, @matters, :id, :nome_materia %>
  </p>
  <p>
    <%= f.label :Giornata %><br />
    <%= f.collection_select :day_id, @days, :id, :giornata %>
  </p>
  <p>
    <%= f.label :Orario %><br />
    <%= f.collection_select :timeframe_id, @timeframes, :id, :orario %>
  </p>
  <p style="display: none"><%= f.submit %></p>
<% end %>